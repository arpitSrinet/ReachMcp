<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mobile Plans</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      padding: 16px;
      background: #f5f5f5;
    }
    
    .plans-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 20px;
      max-width: 1400px;
      margin: 0 auto;
    }
    
    .plan-card {
      border: 2px solid #e0e0e0;
      border-radius: 12px;
      padding: 24px;
      background: white;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }
    
    .plan-card:hover {
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
      transform: translateY(-2px);
    }
    
    .plan-header {
      margin-bottom: 16px;
      border-bottom: 1px solid #e0e0e0;
      padding-bottom: 12px;
    }
    
    .plan-name {
      font-size: 24px;
      font-weight: bold;
      margin: 0 0 8px 0;
      color: #333;
    }
    
    .plan-data {
      font-size: 18px;
      color: #666;
      font-weight: 500;
    }
    
    .plan-pricing {
      margin-bottom: 20px;
    }
    
    .original-price {
      text-decoration: line-through;
      color: #999;
      font-size: 18px;
      margin-right: 8px;
    }
    
    .current-price {
      font-size: 28px;
      font-weight: bold;
      color: #1976d2;
      display: block;
      margin: 8px 0;
    }
    
    .taxes-note {
      font-size: 14px;
      color: #666;
      margin-top: 4px;
      font-style: italic;
    }
    
    .discount-badge {
      display: inline-block;
      background: #4caf50;
      color: white;
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 14px;
      font-weight: bold;
      margin-top: 8px;
    }
    
    .plan-features {
      margin: 20px 0;
    }
    
    .feature {
      display: flex;
      align-items: center;
      margin: 8px 0;
      font-size: 16px;
      color: #333;
    }
    
    .feature-icon {
      margin-right: 12px;
      font-size: 20px;
      width: 24px;
      text-align: center;
    }
    
    .select-button {
      width: 100%;
      padding: 12px 24px;
      font-size: 16px;
      font-weight: bold;
      border: 2px solid #1976d2;
      background: #1976d2;
      color: white;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 16px;
    }
    
    .select-button:hover {
      background: #1565c0;
      border-color: #1565c0;
    }
    
    .select-button:active {
      transform: scale(0.98);
    }
    
    .broadband-facts {
      margin-top: 16px;
      padding-top: 16px;
      border-top: 1px solid #e0e0e0;
    }
    
    .broadband-facts summary {
      cursor: pointer;
      color: #1976d2;
      font-weight: bold;
      font-size: 14px;
      user-select: none;
    }
    
    .broadband-facts summary:hover {
      color: #1565c0;
    }
    
    .facts-content {
      margin-top: 8px;
      font-size: 14px;
      color: #666;
      padding: 8px 0;
    }
    
    .facts-content p {
      margin: 4px 0;
    }
    
    .facts-content code {
      background: #f5f5f5;
      padding: 2px 6px;
      border-radius: 3px;
      font-family: monospace;
      font-size: 12px;
    }
  </style>
</head>
<body>
  <div class="plans-container" id="plans-container"></div>

  <script>
    // Function to render a single plan card
    function renderPlan(plan) {
      const planId = plan.id || plan.uniqueIdentifier;
      const name = plan.displayName || plan.name;
      const price = plan.price || plan.baseLinePrice || 0;
      const data = plan.data || plan.planData || 0;
      const dataUnit = plan.dataUnit || 'GB';
      const discountPctg = plan.discountPctg || 0;
      
      let originalPrice = null;
      let discountAmount = 0;
      if (discountPctg > 0) {
        originalPrice = Math.round(price / (1 - discountPctg / 100));
        discountAmount = Math.round(originalPrice - price);
      }
      
      const features = [];
      if (plan.isUnlimited || plan.unlimited) {
        features.push({ icon: 'ðŸ“ž', text: 'Unlimited calls' });
      }
      if (data > 0) {
        const throttleText = plan.throttleSpeed > 0 ? ' (reduced speeds thereafter)' : '';
        features.push({ icon: 'ðŸ“Š', text: `${data}${dataUnit} high-speed data${throttleText}` });
      }
      if (plan.overageAllowedData && plan.overageAllowedData > 0) {
        features.push({ icon: 'ðŸ“ˆ', text: `${plan.overageAllowedData}${plan.overageAllowedDataUnit || 'MB'} data` });
      }
      if (plan.maxLines && plan.maxLines > 1) {
        features.push({ icon: 'ðŸ‘¥', text: `Up to ${plan.maxLines} lines` });
      }
      if (plan.additionalLinePrice) {
        features.push({ icon: 'âž•', text: `Additional lines: $${plan.additionalLinePrice}/mo` });
      }
      if (plan.allowPlanChange) {
        features.push({ icon: 'ðŸ”„', text: 'Plan changes allowed' });
      }
      
      return `
        <div class="plan-card">
          <div class="plan-header">
            <div class="plan-name">${name}</div>
            <div class="plan-data">${data}${dataUnit}</div>
          </div>
          
          <div class="plan-pricing">
            ${originalPrice ? `<span class="original-price">$${originalPrice}</span>` : ''}
            <span class="current-price">$${price}/mo</span>
            <div class="taxes-note">(Taxes & fees included)</div>
            ${discountAmount > 0 ? `<div class="discount-badge">$${discountAmount} off applied</div>` : ''}
          </div>
          
          <div class="plan-features">
            ${features.map(f => `
              <div class="feature">
                <span class="feature-icon">${f.icon}</span>
                <span>${f.text}</span>
              </div>
            `).join('')}
          </div>
          
          <button class="select-button" onclick="selectPlan('${planId}')">
            ðŸ”˜ Select Plan
          </button>
          
          <details class="broadband-facts">
            <summary>ðŸ“‹ Broadband Facts</summary>
            <div class="facts-content">
              <p>Plan ID: <code>${planId}</code></p>
              ${plan.planType ? `<p>Type: ${plan.planType}</p>` : ''}
              ${plan.serviceCode ? `<p>Service: ${plan.serviceCode}</p>` : ''}
              ${plan.planCharging ? `<p>Charging: ${plan.planCharging}</p>` : ''}
            </div>
          </details>
        </div>
      `;
    }
    
    function selectPlan(planId) {
      // Call MCP tool via OpenAI SDK
      if (window.openai?.callTool) {
        window.openai.callTool('add_to_cart', {
          itemType: 'plan',
          itemId: planId
        }).then(result => {
          alert(`âœ… Plan added to cart!`);
          console.log('Cart updated:', result);
        }).catch(error => {
          alert(`Error: ${error.message}`);
          console.error('Error adding to cart:', error);
        });
      } else {
        console.error('window.openai.callTool not available');
        alert('Unable to add to cart. Please try again.');
      }
    }
    
    // Function to render all plans
    function renderAllPlans() {
      const container = document.getElementById('plans-container');
      if (!container) {
        console.error('Plans container not found');
        return false;
      }
      
      // Get tool output data
      const toolOutput = window.openai?.toolOutput || {};
      const plans = toolOutput.plans || [];
      
      console.log('Rendering plans:', {
        hasOpenAI: !!window.openai,
        hasToolOutput: !!window.openai?.toolOutput,
        plansCount: plans.length,
        toolOutput: toolOutput
      });
      
      // Render all plans
      if (plans.length === 0) {
        container.innerHTML = '<p style="padding: 20px; text-align: center; color: #666;">No plans available.</p>';
        return false;
      } else {
        container.innerHTML = plans.map(renderPlan).join('');
        return true;
      }
    }
    
    // Try to render immediately with retry mechanism
    function tryRender() {
      // Check if window.openai is available
      if (window.openai?.toolOutput) {
        const rendered = renderAllPlans();
        if (rendered) {
          console.log('âœ… Plans rendered successfully');
          return;
        }
      }
      
      // Retry after a short delay
      setTimeout(() => {
        if (window.openai?.toolOutput) {
          const rendered = renderAllPlans();
          if (rendered) {
            console.log('âœ… Plans rendered successfully (retry)');
            return;
          }
        }
        
        // Show loading message if still not ready
        const container = document.getElementById('plans-container');
        if (container) {
          container.innerHTML = '<p style="padding: 20px; text-align: center; color: #666;">Loading plans...</p>';
        }
      }, 100);
    }
    
    // Try immediately
    tryRender();
    
    // Also listen for load event as fallback
    window.addEventListener("load", () => {
      console.log('Load event fired, attempting to render plans');
      renderAllPlans();
    });
    
    // Also try on DOMContentLoaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        console.log('DOMContentLoaded fired, attempting to render plans');
        renderAllPlans();
      });
    } else {
      // DOM already loaded, try again
      setTimeout(renderAllPlans, 200);
    }
  </script>
</body>
</html>

