{
  "name": "reach-mobile-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "cross-env MCP_TRANSPORT=http node server.js",
    "start:http": "cross-env MCP_TRANSPORT=http PORT=3000 node server.js",
    "start:https": "cross-env MCP_TRANSPORT=https PORT=3000 node server.js",
    "dev:ui": "cross-env ENABLE_DEV_SERVER=true MCP_TRANSPORT=https PORT=3000 node server.js",
    "dev:ui:http": "cross-env ENABLE_DEV_SERVER=true MCP_TRANSPORT=http PORT=3000 node server.js",
    "ngrok": "./run-ngrok.sh",
    "dev": "node --watch server.js",
    "test": "node test-simple.js",
    "test:full": "node test-client.js",
    "test:https": "node test-https.js",
    "generate-certs": "./generate-certs.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "mongodb": "^7.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0"
  }
}
